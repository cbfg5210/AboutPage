<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/aboutItemPadding"
    android:paddingRight="@dimen/aboutItemPadding">

    <TextView
        android:id="@+id/tvDetItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/col_b3000000"
        android:textSize="@dimen/aboutDetailTxtSize"
        tool:text="title title"/>

    <TextView
        android:id="@+id/tvDetItemContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/col_b3000000"
        android:textSize="@dimen/aboutDetailTxtSize"
        tool:text="content content content content content content "/>
</LinearLayout>
