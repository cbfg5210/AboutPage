<resources>

    <style name="AboutActionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">@dimen/about_item_padding</item>
        <item name="android:paddingRight">@dimen/about_item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/col_b3000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DetailDescStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/col_b3000000</item>
        <item name="android:visibility">gone</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:paddingBottom">@dimen/about_item_padding</item>
        <item name="android:paddingLeft">@dimen/about_item_padding</item>
        <item name="android:paddingRight">@dimen/about_item_padding</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
