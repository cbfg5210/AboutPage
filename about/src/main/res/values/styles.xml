<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AboutActionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">@dimen/aboutItemPadding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/col_b3000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DetailDescStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/col_b3000000</item>
        <item name="android:visibility">gone</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:paddingBottom">@dimen/aboutItemPadding</item>
        <item name="android:paddingLeft">@dimen/aboutItemPadding</item>
        <item name="android:paddingRight">@dimen/aboutItemPadding</item>
        <item name="android:textSize">@dimen/aboutDetailTxtSize</item>
    </style>
</resources>
